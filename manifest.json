{
    "manifest_version": 2,
  
    "name": "Binance Price Tracker",
    "description": "This extension tracks the Binance price.",
    "version": "0.1",
    
    "icons": {
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
    },

    "browser_action":{
        "default_icon": "icon128.png"
    },

    "background": {
        "scripts": [
            "getPrice.js",
            "updatePrice.js"
        ],
        "persistent": true
    },
  
    "permissions": [
        "storage",
        "https://www.binance.com/"
    ]
  }